# ======================
# DATABASE
# ======================
MONGODB_URI=mongodb://localhost:27017/tendorai
DATABASE_URL_PRODUCTION=mongodb+srv://username:password@cluster.mongodb.net/tendorai

# ======================
# JWT AUTHENTICATION
# ======================
# Generate secrets with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_32_chars_minimum
JWT_REFRESH_SECRET=your_refresh_secret_32_chars_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# OPENAI API
# ======================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ======================
# EMAIL SERVICE
# ======================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@tendorai.com
EMAIL_FROM_NAME=TendorAI

# ======================
# APPLICATION
# ======================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_VERSION=v1

# ======================
# FILE UPLOAD
# ======================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,doc,docx

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# SECURITY
# ======================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# ======================
# AWS S3 (Optional - for production)
# ======================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=tendorai-uploads

# ======================
# MONITORING (Optional)
# ======================
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
